// 大型测试：复杂控制流
public class TestControlFlowComplex {
    
    public static void main() {
        println("=== Complex Control Flow Tests ===");
        
        // 测试1: 嵌套循环
        println("\n1. Nested loops - multiplication table:");
        for (int i = 1; i <= 5; i++) {
            for (int j = 1; j <= 5; j++) {
                int product = i * j;
                if (product < 10) {
                    print(" ");
                }
                print(product);
                print(" ");
            }
            println("");
        }
        
        // 测试2: 带break的多层循环（使用布尔标志代替带标签的break）
        println("\n2. Break in nested loops:");
        int foundI = -1;
        int foundJ = -1;
        boolean found = false;
        for (int i = 0; i < 10 && !found; i++) {
            for (int j = 0; j < 10 && !found; j++) {
                if (i * j == 42) {
                    foundI = i;
                    foundJ = j;
                    found = true;
                }
            }
        }
        print("Found i*j=42 at: i=");
        print(foundI);
        print(", j=");
        println(foundJ);
        
        // 测试3: 带continue的循环
        println("\n3. Continue in loop (print odd numbers):");
        for (int i = 0; i < 20; i++) {
            if (i % 2 == 0) {
                continue;
            }
            print(i);
            print(" ");
        }
        println("");
        
        // 测试4: do-while与条件结合
        println("\n4. Do-while with conditions:");
        int count = 0;
        int sum = 0;
        do {
            count = count + 1;
            sum = sum + count;
            if (sum > 20) {
                break;
            }
        } while (count < 100);
        print("Sum exceeded 20 at count=");
        println(count);
        
        // 测试5: 复杂的if-else链
        println("\n5. Complex if-else chain:");
        for (int i = 1; i <= 20; i++) {
            if (i % 15 == 0) {
                print("FizzBuzz ");
            } else if (i % 3 == 0) {
                print("Fizz ");
            } else if (i % 5 == 0) {
                print("Buzz ");
            } else {
                print(i);
                print(" ");
            }
        }
        println("");
        
        // 测试6: switch语句
        println("\n6. Switch statement:");
        for (int day = 1; day <= 7; day++) {
            print("Day ");
            print(day);
            print(": ");
            switch (day) {
                case 1:
                    println("Monday");
                    break;
                case 2:
                    println("Tuesday");
                    break;
                case 3:
                    println("Wednesday");
                    break;
                case 4:
                    println("Thursday");
                    break;
                case 5:
                    println("Friday");
                    break;
                case 6:
                case 7:
                    println("Weekend");
                    break;
                default:
                    println("Invalid");
            }
        }
        
        // 测试7: while循环中的break和continue
        println("\n7. While with break and continue:");
        int n = 0;
        int processed = 0;
        while (n < 50) {
            n = n + 1;
            if (n % 10 == 0) {
                continue;  // 跳过10的倍数
            }
            if (n > 30) {
                break;  // 超过30时停止
            }
            processed = processed + 1;
        }
        print("Processed ");
        print(processed);
        println(" numbers");
        
        // 测试8: 三重嵌套循环
        println("\n8. Triple nested loop:");
        int tripleCount = 0;
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                for (int k = 0; k < 3; k++) {
                    tripleCount = tripleCount + 1;
                }
            }
        }
        print("Total iterations: ");
        println(tripleCount);
        
        println("\nAll control flow tests completed!");
    }
}
