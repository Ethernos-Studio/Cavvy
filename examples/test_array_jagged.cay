// 大型测试：不规则数组 (Jagged Array)
public class TestArrayJagged {
    
    public static void main() {
        println("=== Jagged Array Tests ===");
        
        // 创建不规则数组
        int[][] jagged = new int[5][]();
        
        // 为每行分配不同长度
        jagged[0] = new int[1]();
        jagged[1] = new int[2]();
        jagged[2] = new int[3]();
        jagged[3] = new int[4]();
        jagged[4] = new int[5]();
        
        // 初始化数据
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j <= i; j++) {
                jagged[i][j] = (i + 1) * 10 + j;
            }
        }
        
        // 打印不规则数组
        println("Jagged array contents:");
        for (int i = 0; i < 5; i++) {
            print("Row ");
            print(i);
            print(" (length=");
            print(jagged[i].length);
            print("): ");
            for (int j = 0; j <= i; j++) {
                print(jagged[i][j]);
                print(" ");
            }
            println("");
        }
        
        // 验证行长度
        boolean lengthsCorrect = true;
        for (int i = 0; i < 5; i++) {
            if (jagged[i].length != i + 1) {
                lengthsCorrect = false;
            }
        }
        
        if (lengthsCorrect) {
            println("\nJagged array length test PASSED!");
        } else {
            println("\nJagged array length test FAILED!");
        }
        
        // 计算总和
        int sum = 0;
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j <= i; j++) {
                sum = sum + jagged[i][j];
            }
        }
        
        print("Total sum: ");
        println(sum);
        
        println("\nAll jagged array tests completed!");
    }
}
