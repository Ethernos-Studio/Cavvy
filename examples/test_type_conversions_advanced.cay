// 大型测试：高级类型转换
public class TestTypeConversionsAdvanced {
    
    public static void main() {
        println("=== Advanced Type Conversion Tests ===");
        
        // 测试1: int 到 long 的转换
        println("\n1. int to long:");
        int i = 100;
        long l = (long)i;
        print("(long)100 = ");
        println((int)l);
        
        // 测试2: long 到 int 的转换
        println("\n2. long to int:");
        long bigL = 12345L;
        int smallI = (int)bigL;
        print("(int)12345L = ");
        println(smallI);
        
        // 测试3: int 到 float/double
        println("\n3. int to float/double:");
        int intVal = 42;
        float f = (float)intVal;
        double d = (double)intVal;
        print("(float)42 = ");
        println((int)f);
        print("(double)42 = ");
        println((int)d);
        
        // 测试4: float 到 int 的截断
        println("\n4. float to int truncation:");
        float pi = 3.14159f;
        int truncated = (int)pi;
        print("(int)3.14159f = ");
        println(truncated);
        
        // 测试5: double 到 float
        println("\n5. double to float:");
        double precise = 2.718281828;
        float approx = (float)precise;
        print("(float)2.718... = ");
        println((int)(approx * 1000));
        
        // 测试6: char 到 int
        println("\n6. char to int:");
        char c = 'A';
        int ascii = (int)c;
        print("(int)'A' = ");
        println(ascii);
        
        // 测试7: 算术运算中的隐式转换
        println("\n7. Implicit conversions in arithmetic:");
        int x = 5;
        double y = 2.5;
        double result = x + y;
        print("5 + 2.5 = ");
        println((int)result);
        
        // 测试8: 复合赋值中的转换（使用显式转换）
        println("\n8. Compound assignment with explicit conversion:");
        int a = 5;
        a = (int)(a + 2.5);  // 显式转换
        print("5 + 2.5 (truncated to int) = ");
        println(a);
        
        // 测试9: 负数转换
        println("\n9. Negative number conversions:");
        int negInt = -100;
        long negLong = (long)negInt;
        float negFloat = (float)negInt;
        print("(long)(-100) = ");
        println((int)negLong);
        print("(float)(-100) = ");
        println((int)negFloat);
        
        // 测试10: 边界值
        println("\n10. Boundary values:");
        int maxInt = 2147483647;
        long maxAsLong = (long)maxInt;
        print("(long)MAX_INT = ");
        println((int)maxAsLong);
        
        println("\nAll advanced type conversion tests completed!");
    }
}
